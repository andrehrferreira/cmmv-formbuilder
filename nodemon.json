{
    "watch": ["src"],
    "ext": "ts,js",
    "verbose": false,
    "ignore": [
        "src/**/*.spec.ts", "src/decorators",
        "src/interfaces", "src/services",
        "src/modules", "src/models",
        "src/controllers", "src/protos",
        "src/gateways", "src/entities",
        "src/app.module.ts", "src/dev.ts"
    ],
    "exec": "SWC_NODE_PROJECT=tsconfig.server.json node -r @swc-node/register ./src/server.ts" 
}